<% @works.each do |work| %>
  <div class="list-row-display">
    <%= link_to(image_tag(work.image, :class => 'thumbnail'), work) if work.image %>
    <h3><%= link_to(work.title, work) %></h3>
    <p>By <%= link_to(work.artist.name, work.artist) if work.artist %></p>
    <div class="button-cluster">
    <%= link_to(content_tag(:div, 'Edit', class:"button"), edit_work_path(work)) %>
    <%= link_to(content_tag(:div, 'Delete', class:"button"), work, :data => {:confirm => 'Are you sure you want to delete this work?', :method => :delete }) %>
    </div>
  </div>
<% end %>